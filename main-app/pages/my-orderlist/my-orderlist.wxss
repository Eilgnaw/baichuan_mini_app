/* pages/my-orderlist/my-orderlist.wxss */

page {
  background-color: rgb(231, 221, 221);
}

.main-box {
  background-color: white;
  overflow: hidden;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.order-no {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  color: rgb(156, 144, 144);
  border-bottom: 1rpx #ccc solid;
  margin: 0 auto;
}
.order-detail {
  width: 90%;
  display: flex;
  flex-direction: row;
  margin: 20rpx auto;
  padding-bottom: 20rpx;
  border-bottom: 1rpx #ccc solid;
}

.phone-attr {
  width: 80%;
  margin-right: 20rpx;
}

.price {
  width: 20%;
  text-align: center;
  display: flex;
  flex-direction: column;
  color: rgb(143, 129, 129);
}

.order-time {
  width: 90%;
  margin: 0 auto;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: rgb(156, 144, 144);
}
.order-sum{
  width: 90%;
  margin: 20rpx auto;
  display: flex;
  flex-direction: row;
}
.total{
  width: 80%;
}
.cenlce{
  width: 20%;
  text-align: center;
  border: 1rpx black solid;
  border-radius: 2em;
}
