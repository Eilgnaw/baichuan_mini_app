}

.cate-cols {
  display: flex;
  width: 100%;
  /* padding: 20rpx 40rpx; */
  margin: 0 auto;
  background-color: #fff;
  justify-content: space-between;
}

.cate-col {
  width: 200rpx;
  height: 184rpx;
  font-size: 0;
  text-align: center;
}

.cate-col .icon {
  width: 90rpx;
  height: 90rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}

.cate-col .text {
  margin-top: 20rpx;
  line-height: 1;
  color: #7c829d;
  font-size: 28rpx;
}

.cate-cols .mue-navigator {
  border: none;
  border-radius: 0;
}

.cate-cols .mue-active {
