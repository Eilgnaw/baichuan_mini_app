}

.sec-title {
  display: flex;
  width: 90%;
  margin: 0 auto;
  padding-top: 44rpx;
  padding-bottom: 50rpx;
  line-height: 36rpx;
  align-items: center;
  color: #292e3e;
  justify-content: space-between;
}

.sec-title .right {
  color: #7c829d;
  font-size: 26rpx;
  font-weight: normal;
  font-family: PingFang-SC-Heavy;
}

.products-wrapper {
  background: #f9f9fb;
}

.products-wrapper .sec-title {
  padding-bottom: 20rpx;
}

.product-cols {
  width: 100%;
  padding-left: 20rpx;
  margin-bottom: 30rpx;
  margin-top: 20rpx;
}

.product-col {
  display: inline-block;
  width: 325rpx;
  height: 180rpx;
  margin: 0 0 20rpx 20rpx;
  font-size: 0;
  vertical-align: top;
  border-radius: 6rpx;
  background-color: #fff;
  overflow: visible;
  box-shadow: 0rpx 8rpx 20rpx 3rpx rgba(135, 142, 160, 0.15);
}

.product-col .p-img {
  float: left;
  height: 180rpx;
}

.product-col .img {
  width: 124rpx;
  height: 124rpx;
  margin-top: 28rpx;
}

.product-col .p-content {
  display: inline-block;
  height: 180rpx;
  width: 200rpx;
}

.product-col .name {
  color: #292e3e;
  font-size: 26rpx;
  line-height: 26rpx;
  padding-bottom: 15rpx;
  padding-top: 42rpx;
}

.product-col .desc {
  color: #cacee0;
  font-size: 22rpx;
  line-height: 22rpx;
}

.product-col .price {
  color: #fabe00;
  font-size: 24rpx;
  line-height: 24rpx;
  margin-bottom: 10rpx;
}

