}

.hot-comment {
  width: 100%;
  height: 480rpx;
  overflow: hidden;
  background: #f9f9fb;
}

.hot-comment-item-card {
  background: #fff;
  width: 538rpx;
  height: 244rpx;
  border-radius: 10rpx;
  padding: 30rpx 20px;
  margin-left: 30rpx;
  display: inline-block;
  box-sizing: content-box;
}

.hot-comment-item-card:last-child {
  margin-right: 30rpx;
}

.hot-comment-item-card .comment-score {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.hot-comment-item-card .comment-score .comment-user {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.hot-comment-item-card .comment-content {
  width: 520rpx;
  height: 76rpx;
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #8f94ab;
  white-space: pre-line;
  display: -webkit-box;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.hot-comment-item-card .comment-phone {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  margin-top: 20rpx;
}

.hot-comment-item-card .comment-phone .phone-type {
  color: #666;
}

.hot-comment-item-card .comment-phone .profit {
  color: #ff4000;
}

