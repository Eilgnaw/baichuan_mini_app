.index-search-wrapper {
  display: flex;
  padding: 20rpx 40rpx;
  z-index: 99;
}

.index-search-wrapper .right-button {
  width: 94rpx;
  height: 78rpx;
  padding: 0;
  color: #7c829d;
  font-size: 26rpx;
