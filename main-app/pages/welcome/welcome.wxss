.main-box {
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: #fff;
}

.banner .swiper-wrapper {
  width: 670rpx;
  height: 259rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  border-radius: 8rpx;
}

.banner .slide-image {
  width: 670rpx;
  height: 259rpx;
}

.banner .wx-swiper-dot {
