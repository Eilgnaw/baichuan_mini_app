.huishou-btn {
  font-size: 32rpx;
  width: 670rpx;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  border: 0;
  padding: 0;
  background-color: #3399FF;
  border-radius: 4px;
  font-family: 'PingFangSC-Semibold';
  display: block;
  margin: 20rpx auto;
  color: white;
}

.huishou-btn .button {
  display: block;
  width: 100%;
  height: 100%;
  background-color: transparent;
